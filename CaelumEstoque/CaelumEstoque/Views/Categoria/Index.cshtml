
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nome</td>
                    <td>Descrição</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in ViewBag.Categorias)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Nome</td>
                        <td>@categoria.Descricao</td>
                    </tr>
                }
            </tbody>
        </table>
